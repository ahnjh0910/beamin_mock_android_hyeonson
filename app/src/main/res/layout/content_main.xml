<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:clipChildren="false"
        android:layerType="software">
        <android.support.v4.view.ViewPager
            android:id="@+id/mViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>
    </FrameLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60"
        android:columnCount="3"
        android:rowCount="3"
        android:orientation="horizontal">
        <ImageButton
            app:srcCompat="@drawable/koreanfood"
            android:id="@+id/koreanfood"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <ImageButton
            app:srcCompat="@drawable/boonsik"
            android:id="@+id/boonsik"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <ImageButton
            app:srcCompat="@drawable/donggas"
            android:id="@+id/donggas"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <ImageButton
            app:srcCompat="@drawable/chicken"
            android:id="@+id/chicken"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <ImageButton
            app:srcCompat="@drawable/pizza"
            android:id="@+id/pizza"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <ImageButton
            app:srcCompat="@drawable/jjajang"
            android:id="@+id/jjajang"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <ImageButton
            app:srcCompat="@drawable/zokbal"
            android:id="@+id/zokbal"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <ImageButton
            app:srcCompat="@drawable/nightfood"
            android:id="@+id/nightfood"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <ImageButton
            app:srcCompat="@drawable/zzim"
            android:id="@+id/zzim"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
    </GridLayout>

</LinearLayout>